<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../images/logo.png"></image>
  </view>
  <view class="login-from">
    <form bindsubmit='formSubmit'>
      <!--账号-->
      <view class="inputView">
        <image class="nameImage" src="../../images/icon_person.png"></image>
        <label class="loginLab">账号</label>
        <input class="inputText" placeholder="请输入学号" name="username" />
      </view>
      <view class="line"></view>
  
      <!--密码-->
      <view class="inputView">
        <image class="keyImage" src="../../images/icon_lock.png"></image>
        <label class="loginLab">密码</label>
        <input class="inputText" password="true" placeholder="请输入密码" name="userpwd" />
      </view>
  
      <!--按钮-->
      <view class="loginBtnView">
        <button class='loginBtn' type='primary' form-type='submit'>登录</button>
        <button class='loginBtn'  type="default" form-type='reset'>取消</button>
      </view>
    </form>
    
  </view>
</view>