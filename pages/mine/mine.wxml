<!--pages/mine/mine.wxml-->
<view class='container'>
  <view class="userinfo">
<!---头像-->
  <view class="userinfo-avatar">
    <open-data  type="userAvatarUrl"></open-data>
  </view>
  <!--昵称-->
    <open-data type="userNickName"></open-data>
</view>
  <i-cell-group class="cell">
      <i-cell title="身份证号" value="{{myinfo.Sbh}}"><i-icon type="businesscard_fill" color='lightblue'slot="icon" size='28'/></i-cell>
      <i-cell title="姓名" value="{{myinfo.Syhm}}"><i-icon type="mine" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="性别" value="{{myinfo.Sxb}}"><i-icon type="group" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="邮箱" value="{{myinfo.Semail}}"><i-icon type="mail" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="电话" value="{{myinfo.Stel}}"><i-icon type="mobilephone" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="类别" value="{{myinfo.Slb}}"><i-icon type="other" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="角色" value="{{myinfo.Sjsbh}}"><i-icon type="group_fill" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="院级党委" value="{{myinfo.Sszdwbh}}"><i-icon type="homepage" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="党支部" value="{{myinfo.Sdzb}}"><i-icon type="collection_fill" color='lightblue' slot="icon" size='28'/></i-cell>
      <i-cell title="状态" value="{{myinfo.Syhzt}}"><i-icon type="accessory" color='lightblue' slot="icon" size='28'/></i-cell>
  </i-cell-group>
   <i-button class='btn-exit' bindtap='exit' bind:click="handleClick" type="error" size="large">注销</i-button>
</view>
